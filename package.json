{
  "name": "blog_api",
  "version": "1.0.0",
  "private": true,
  "description": "Blog Api App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec babel-node -r tsconfig-paths/register src/index.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && node ./build/src/index.js",
    "lint": "eslint ./src --fix --max-warnings=0",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,css,less,scss,html,md}\"",
    "lint:lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avnendv/blog_api.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "structure"
  ],
  "author": "AVNENDV",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/avnendv/blog_api/issues"
  },
  "homepage": "https://github.com/avnendv/blog_api#readme",
  "dependencies": {
    "@babel/runtime": "^7.23.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/node": "^7.22.19",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "express-rate-limit": "^7.0.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^14.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "prettier": "^3.0.3",
    "shortid": "^2.2.16",
    "swagger-ui-express": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
